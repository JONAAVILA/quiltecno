---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Big+Shoulders+Text:wght@100..900&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
		text-rendering: optimizeLegibility;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
	}
	@font-face {
		font-family: 'big_noodle';
		src: url('./../assets/fonts/big_noodle_titling.ttf') format('truetype');
		font-style: normal;
		font-display: swap;
	}
	@font-face {
		font-family: 'nau';
		src: url('./../assets/fonts/Nau_Sea.otf') format('truetype');
		font-style: normal;
		font-display: swap;
	}
	html {
		font-family: "Big Shoulders Text", sans-serif;
		background: #13151a;
		background-size: 224px;
	}
	h1{
        font-size: 6rem;
        font-family: "nau", sans-serif;
        font-weight: 200;
        margin-top: 0;
        margin-left: 10px;
        margin-bottom: -40px;
    }
    h2{
        font-size: 14rem;
        color: #ffff30;
        font-family: "big_noodle", sans-serif;
        font-weight: 200;
        letter-spacing: 3px;
        margin:0;
    }
	h3{
		font-weight: 400;
		letter-spacing: 4px;
		font-size: 2rem;
	}
</style>
